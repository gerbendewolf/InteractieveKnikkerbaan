<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="BASELINE_CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <TextField id="NaamSpel" fx:id="naamSpel" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <ListView fx:id="poorten" prefHeight="60.0" prefWidth="100.0" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.rowSpan="2" />
    <HBox alignment="TOP_LEFT" GridPane.rowIndex="1"
          GridPane.columnIndex="1" GridPane.columnSpan="2"
          GridPane.rowSpan="1">
        <children>
            <Button onAction="#startKnikerspel" text="Start Knikkerspel" alignment="TOP_LEFT" />
        </children>
        <children>
            <Button onAction="#ResetTellers" text="Reset tellers" alignment="TOP_RIGHT" />

        </children>
        <children>
            <Label fx:id="time">
                <font>

                </font>
            </Label>
        </children>
    </HBox>
    <HBox alignment="BOTTOM_LEFT" GridPane.rowIndex="2"
          GridPane.columnIndex="1" GridPane.columnSpan="2"
          GridPane.rowSpan="1">
        <children>
            <Button onAction="#SelectCom1" text="Selecteer Arduino 1" alignment="TOP_RIGHT" />
        </children>
        <children>
            <Button onAction="#SelectCom2" text="Selecteer Arduino 2" alignment="BOTTOM_LEFT" />
        </children>

    </HBox>





    <Button onAction="#SelectComStart" text="Selecteer StartArduino" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label fx:id="helloWorld" GridPane.columnIndex="2" GridPane.rowIndex="0" />
    <Label fx:id="Arduino1" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="waardeLaser" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label fx:id="waardeLaser2" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label fx:id="Arduino2" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <Label fx:id="waardeLaser3" GridPane.columnIndex="2" GridPane.rowIndex="4" />
    <Label fx:id="waardeLaser4" GridPane.columnIndex="2" GridPane.rowIndex="5" />
    <Label fx:id="ArduinoStart" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Label fx:id="waardeLaserStart" GridPane.columnIndex="0" GridPane.rowIndex="5" />

    <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>


</GridPane>
